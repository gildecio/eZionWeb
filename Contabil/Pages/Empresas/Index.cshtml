@page
@model eZionWeb.Contabil.Pages.Empresas.IndexModel
@{
    ViewData["Title"] = "Empresas";
}

<div class="container list-produtos">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0"><i class="bi bi-buildings me-2"></i>Empresas</h2>
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg me-1"></i>Novo</a>
    </div>
    <div class="table-responsive">
@{ var tableClass = (ViewContext.HttpContext.Request.Cookies["layout"] ?? "dark-purpura").StartsWith("light-") ? "table table-striped align-middle" : "table table-dark table-striped align-middle"; }
        <table class="@tableClass">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var e in Model.Itens)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nome</td>
                    <td>@e.Cnpj</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-light" asp-page="Edit" asp-route-id="@e.Id"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@e.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>