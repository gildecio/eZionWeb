@page "{id:int}"
@model eZionWeb.Contabil.Pages.Lancamentos.DeleteModel
@{
    ViewData["Title"] = "Excluir Lançamento";
}

<div class="container">
    <h2 class="mb-3"><i class="bi bi-trash me-2"></i>Excluir Lançamento</h2>
    <div class="alert alert-warning">Deseja realmente excluir o lançamento de <strong>@Model.Item?.Data.ToLocalTime().ToString("dd/MM/yyyy")</strong> no valor de <strong>@Model.Item?.Valor.ToString("N2")</strong>?</div>
    <form method="post">
        <input type="hidden" asp-for="Item!.Id" />
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Excluir</button>
            <a class="btn btn-outline-light ms-2" asp-page="Index"><i class="bi bi-x me-1"></i>Cancelar</a>
        </div>
    </form>
</div>