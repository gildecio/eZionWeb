@page "{id:int}"
@model eZionWeb.Contabil.Pages.Lancamentos.EditModel
@{
    ViewData["Title"] = "Editar Lançamento";
}

<div class="container">
    <h2 class="mb-3"><i class="bi bi-pencil me-2"></i>Editar Lançamento</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Item!.Id" />
        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label">Data</label>
                <input type="date" class="form-control" asp-for="Item!.Data" />
            </div>
            <div class="col-md-5 mb-3">
                <label class="form-label">Conta</label>
                <select class="form-select" asp-for="Item!.PlanoContaId">
                    @foreach (var c in Model.Contas)
                    {
                        <option value="@c.Value">@c.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Tipo</label>
                <select class="form-select" asp-for="Item!.Tipo">
                    <option value="Debito">Débito</option>
                    <option value="Credito">Crédito</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mb-3">
                <label class="form-label">Histórico</label>
                <input class="form-control" asp-for="Item!.Historico" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Valor</label>
                <input type="number" step="0.01" class="form-control" asp-for="Item!.Valor" />
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary"><i class="bi bi-check2 me-1"></i>Salvar</button>
            <a class="btn btn-outline-light ms-2" asp-page="Index"><i class="bi bi-x me-1"></i>Cancelar</a>
        </div>
    </form>
</div>