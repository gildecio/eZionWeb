@page
@model eZionWeb.Estoque.Pages.Documentos.Transferencias.IndexModel
@{
    ViewData["Title"] = "Transferências";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0"><i class="bi bi-arrow-left-right me-2"></i>Transferências de Estoque</h2>
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg me-1"></i>Novo</a>
    </div>
    <form method="get" class="row g-3 mb-3">
        <div class="col-md-2">
            <label class="form-label" for="de">De</label>
            <input id="de" type="date" class="form-control" name="De" value="@Model.De?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-2">
            <label class="form-label" for="ate">Até</label>
            <input id="ate" type="date" class="form-control" name="Ate" value="@Model.Ate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-3">
            <label class="form-label" for="produto">Produto</label>
            <select id="produto" class="form-select" name="ProdutoId">
                <option value="">Todos</option>
                @foreach (var p in Model.Produtos)
                {
                    <option value="@p.Value" selected="@(Model.ProdutoId.HasValue && Model.ProdutoId.Value.ToString() == p.Value)">@p.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label" for="local">Local</label>
            <select id="local" class="form-select" name="LocalId">
                <option value="">Todos</option>
                @foreach (var l in Model.Locais)
                {
                    <option value="@l.Value" selected="@(Model.LocalId.HasValue && Model.LocalId.Value.ToString() == l.Value)">@l.Text</option>
                }
            </select>
        </div>
        <div class="col-md-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-light"><i class="bi bi-filter me-1"></i>Filtrar</button>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Produto</th>
                    <th>Origem</th>
                    <th>Destino</th>
                    <th class="text-end">Qtd</th>
                    <th>Unidade</th>
                    <th>Obs</th>
                    <th>Status</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var d in Model.Itens)
            {
                <tr>
                    <td>@d.Data.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td>@d.ProdutoNome</td>
                    <td>@d.OrigemNome</td>
                    <td>@d.DestinoNome</td>
                    <td class="text-end">@d.Quantidade</td>
                    <td>@d.UnidadeSigla</td>
                    <td>@d.Observacao</td>
                    <td>
                        @(d.Status == eZionWeb.Estoque.Models.DocumentoStatus.Rascunho ? "Rascunho" : d.Status == eZionWeb.Estoque.Models.DocumentoStatus.Efetivado ? "Efetivado" : d.Status == eZionWeb.Estoque.Models.DocumentoStatus.Estornado ? "Estornado" : "Cancelado")
                    </td>
                    <td class="text-end">
                        @if (d.Status == eZionWeb.Estoque.Models.DocumentoStatus.Rascunho)
                        {
                            <a class="btn btn-sm btn-outline-light" asp-page="Edit" asp-route-id="@d.Id"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@d.Id"><i class="bi bi-trash"></i></a>
                            <form method="post" asp-page-handler="Efetivar" asp-route-id="@d.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-success"><i class="bi bi-check2-circle"></i></button>
                            </form>
                        }
                        else if (d.Status == eZionWeb.Estoque.Models.DocumentoStatus.Efetivado)
                        {
                            <form method="post" asp-page-handler="Estornar" asp-route-id="@d.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-warning"><i class="bi bi-arrow-counterclockwise"></i></button>
                            </form>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>