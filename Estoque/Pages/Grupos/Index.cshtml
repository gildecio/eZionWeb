@page
@model eZionWeb.Estoque.Pages.Grupos.IndexModel
@{
    ViewData["Title"] = "Grupos";
}

<div class="container list-grupos">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Grupos</h2>
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg me-1"></i>Novo</a>
    </div>
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Nível</th>
                    <th>Pai</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var g in Model.Itens)
            {
                <tr>
                    <td>@g.Codigo</td>
                    <td>@g.Nome</td>
                    <td>@g.Nivel</td>
                    <td>@(string.IsNullOrEmpty(g.PaiNome) ? "(sem pai)" : g.PaiNome)</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-light" asp-page="Edit" asp-route-id="@g.Id"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@g.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>