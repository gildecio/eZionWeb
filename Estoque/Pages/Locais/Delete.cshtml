@page "{id:int}"
@model eZionWeb.Estoque.Pages.Locais.DeleteModel
@{
    ViewData["Title"] = "Excluir Local de Estoque";
}

<div class="container">
    <h2 class="mb-3"><i class="bi bi-geo-alt me-2"></i>Excluir Local de Estoque</h2>
    @if (Model.Item != null)
    {
        <div class="alert alert-warning">
            Tem certeza que deseja excluir o local <strong>@Model.Item.Nome</strong>? Esta ação não pode ser desfeita.
        </div>
        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Excluir</button>
            <a class="btn btn-secondary ms-1" asp-page="Index">Cancelar</a>
        </form>
    }
</div>