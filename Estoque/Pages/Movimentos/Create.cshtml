@page
@model eZionWeb.Estoque.Pages.Movimentos.CreateModel
@{
    ViewData["Title"] = "Nova Movimentação";
}

<div class="container">
    <h2 class="mb-3"><i class="bi bi-arrow-left-right me-2"></i>Nova Movimentação</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Tipo"></label>
            <select class="form-select" asp-for="Tipo" asp-items="Model.Tipos"></select>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="ProdutoId"></label>
            <select class="form-select" asp-for="ProdutoId" asp-items="Model.Produtos"></select>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="LocalOrigemId"></label>
            <select class="form-select" asp-for="LocalOrigemId" asp-items="Model.Locais">
                <option value="">(selecione)</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="LocalDestinoId"></label>
            <select class="form-select" asp-for="LocalDestinoId" asp-items="Model.Locais">
                <option value="">(selecione)</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Quantidade"></label>
            <input class="form-control" asp-for="Quantidade" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Observacao"></label>
            <textarea class="form-control" asp-for="Observacao"></textarea>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2 me-1"></i>Lançar</button>
        <a class="btn btn-secondary ms-1" asp-page="Index">Cancelar</a>
    </form>
</div>