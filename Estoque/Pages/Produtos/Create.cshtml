@page
@model eZionWeb.Estoque.Pages.Produtos.CreateModel
@{
    ViewData["Title"] = "Novo Produto";
}

<div class="container">
    <h2 class="mb-3"><i class="bi bi-plus-lg me-2"></i>Novo Produto</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Item.Nome"></label>
            <input class="form-control" asp-for="Item.Nome" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="grupo">Grupo (anal√≠tico)</label>
            <select id="grupo" class="form-select" asp-for="Item.GrupoId">
                <option value="">Selecione...</option>
                @foreach (var g in Model.Analiticos)
                {
                    <option value="@g.Value">@g.Text</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="Item.GrupoId"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" for="tipo">Tipo do Produto</label>
            <select id="tipo" class="form-select" asp-for="Item.Tipo">
                @foreach (var t in Model.Tipos)
                {
                    <option value="@t.Value">@t.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2 me-1"></i>Salvar</button>
        <a class="btn btn-secondary ms-1" asp-page="Index">Cancelar</a>
    </form>
</div>