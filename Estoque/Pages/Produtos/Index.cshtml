@page
@model eZionWeb.Estoque.Pages.Produtos.IndexModel
@{
    ViewData["Title"] = "Produtos";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Produtos</h2>
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg me-1"></i>Novo</a>
    </div>
    <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th class="text-end">Preço</th>
                    <th class="text-end">Quantidade</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model.Itens)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nome</td>
                    <td class="text-end">@p.Preco.ToString("C")</td>
                    <td class="text-end">@p.Quantidade</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-light" asp-page="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@p.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
