<!DOCTYPE html>
@{
    var layout = Context.Request.Cookies["layout"] ?? "dark-purpura";
    var theme = layout.StartsWith("light-") ? "light" : "dark";
}
<html lang="pt-br" data-bs-theme="@theme" data-layout="@layout">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eZionWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eZionWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{ var layoutName = layout; var isLightAzul = layoutName == "light-azul"; var themeIsLight = theme == "light"; }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm @(themeIsLight ? "navbar-light" : "navbar-dark") @(isLightAzul ? "bg-baby-blue" : "bg-dark") border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">eZionWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="estoqueDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box-seam me-1"></i>Estoque
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="estoqueDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-card-checklist me-1"></i>Cadastros
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Produtos/Index">
                                                <i class="bi bi-card-checklist me-1"></i>Produtos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Grupos/Index">
                                                <i class="bi bi-diagram-3 me-1"></i>Grupos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Locais/Index">
                                                <i class="bi bi-geo-alt me-1"></i>Locais de Estoque
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-file-text me-1"></i>Documentos
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Documentos/Ajustes/Index">
                                                <i class="bi bi-sliders me-1"></i>Ajustes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Documentos/Requisicoes/Index">
                                                <i class="bi bi-box-arrow-left me-1"></i>Requisições
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Documentos/Devolucoes/Index">
                                                <i class="bi bi-box-arrow-in-right me-1"></i>Devoluções
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Estoque/Documentos/Transferencias/Index">
                                                <i class="bi bi-arrow-left-right me-1"></i>Transferências
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Estoque/Movimentos/Index">
                                        <i class="bi bi-arrow-left-right me-1"></i>Movimentações
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Estoque/Saldos/Index">
                                        <i class="bi bi-stack me-1"></i>Saldos
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="configDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Configurações
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="configDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-palette me-1"></i>Layout
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="/Configuracoes/Settings">
                                                <i class="bi bi-gear me-1"></i>Temas
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-list-ol me-1"></i>Sequências
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="/Configuracoes/Sequencias">
                                                <i class="bi bi-list-ol me-1"></i>Gerenciar Sequências
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-sliders2 me-1"></i>Definições
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="/Configuracoes/Definicoes">
                                                <i class="bi bi-sliders2 me-1"></i>Preferências
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="d-inline-flex justify-content-center align-items-center rounded-circle border border-secondary" style="width:32px;height:32px;">
                                    <i class="bi bi-person-circle"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="/Configuracoes">
                                        <i class="bi bi-gear me-1"></i>Configurações
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Logout">
                                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - eZionWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
